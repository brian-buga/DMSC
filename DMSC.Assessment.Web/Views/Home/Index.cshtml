@using DMSC.Assessment.Web.Extensions;
@model List<DMSC.Assessment.Backend.Models.ArticleModel>
<br />
<div class="container-fluid mt-5">
    <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark ">
        <div class="col-md-12 px-0">
            <h1 class="display-4">Pressford News</h1>
            <p class="lead my-3">We report it as we see it..</p>           
        </div>
    </div>
    <div class="row mb-2">

        @foreach (var article in Model)
        {
            <div class="col-md-6">
                <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h3 class="mb-0">
                            <a class="text-dark" href="@Url.Action("Detail","News", new { area ="", id= article.Id } )">@article.Title</a>
                        </h3>
                        <div class="mb-1 text-muted">@article.Published.ToShortDateString()</div>
                        <p class="card-text mb-auto">@article.Content.ShortString(100)</p>
                        <a href="@Url.Action("Detail","News", new { area ="", id= article.Id  } )">Continue reading</a>
                    </div>
                </div>
            </div>

        }

    </div>
</div>
