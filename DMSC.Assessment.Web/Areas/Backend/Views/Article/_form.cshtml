@model DMSC.Assessment.Backend.Models.ArticleModel

@Html.AntiForgeryToken()

@if (Model.IsSuccess)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-success" role="alert">
                Success
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-6">
        <div class="form-group">
            <label asp-for="Title">Title:</label>
            <input asp-for="@Model.Title" class="form-control" maxlength="50" required>
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label asp-for="Content">Content:</label>
            <textarea asp-for="@Model.Content" class="form-control" maxlength="3000" rows="10" required></textarea>
            <span asp-validation-for="@Model.Content" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-2">
        <div class="form-group">
            <label asp-for="Published">Publish Date:</label>
            <input asp-for="@Model.Published" type="text" class="form-control" maxlength="10" value="@DateTime.Now.ToShortDateString()" required>
            <span asp-validation-for="@Model.Published" class="text-danger"></span>
        </div>
    </div>
</div>

<div class="checkbox">
    <label><input type="checkbox" asp-for="@Model.Active">Active</label>
</div>

<button type="submit" class="btn btn-default">Save Changes</button>



